FROM base-srt:v1
CMD ffmpeg -f v4l2 -framerate 30 -video_size "1280x720" -i "/dev/video0" \
-pix_fmt yuv420p \
-c:v libx264 \
-b:v 1000k \
-g 30 \
-keyint_min 120 \
-profile:v baseline \
-preset fast \
-f mpegts \
"udp://127.0.0.1:1234?pkt_size=1316"
CMD ./srt/build/srt-live-transmit udp://:1234 srt://104.198.79.60:4201 -v